<resources>
    <style name="AppThemeNotTranslucent" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:background">@color/black_50_transparent</item>-->
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeFramework" parent="AppThemeNotTranslucent">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>

        <!--<item name="android:background">@color/black_50_transparent</item>-->
    </style>
    <style name="AppThemeFullScreen" parent="AppThemeFramework">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="windowNoTitle">true</item>

        <!--<item name="android:background">@color/black_50_transparent</item>-->
    </style>
    <style name="AppThemeFramework.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/main_theme_color</item>
        <!-- Used for the title and text -->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <style name="dialog_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/anin_in</item>

        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/anin_out</item>

    </style>
</resources>
